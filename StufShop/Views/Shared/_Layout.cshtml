                <div class="container_12">
                    <div class="grid_12">
                        <p class="txt_priv"><a href="index.html" class="footer_txt2">شرکت لوزام خانگی</a>  <!--{%FOOTER_LINK} --></p>
                    </div>
                </div>
            </div>

        </div>

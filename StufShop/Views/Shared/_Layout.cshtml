                                {
                                 <br/>   <p class="header_txt1 dir" style="margin-right: 273px; margin-top: 19px; "><i class="fa fa-user"></i> کاربر  @displayname  به سایت خوش آمدید.</p>
                                }
                            </div>
                            @if (Customer == null)
                            {
                                <nav>
                                    <ul class="sf-menu header_menu">
                                        <li class="current">
                                            <a asp-action="index" asp-controller="Home"><span></span>صفحه اصلی<strong></strong></a>
                                        </li>
                                        <li><a asp-action="List" asp-controller="Home">فروشگاه<strong></strong></a></li>
                                        <li><a asp-action="Signin" asp-controller="Account">ورود   <strong></strong></a></li>
                                        <li><a asp-action="Signup" asp-controller="Account">ثبت نام   <strong></strong></a></li>

                                    </ul>
                                </nav>
                            }
                            else
                            {
                                <nav>
                                    <ul class="sf-menu header_menu">
                                        <li class="current">
                                            <a asp-action="index" asp-controller="Home"><span></span>صفحه اصلی<strong></strong></a>
                                        </li>
                                        <li><a asp-action="List" asp-controller="Home">فروشگاه<strong></strong></a></li>
